<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="135dp"
        android:layout_height="238dp"
        android:layout_marginTop="48dp"
        android:scaleType="centerInside"
        android:src="@drawable/guaishou"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="288dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:padding="20dp">

            <EditText
                android:id="@+id/username"
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_tetx_bg"
                android:ems="10"
                android:hint="用户名"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/deep_fontcolor"
                android:textColorHint="@color/fontcolor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:padding="20dp"
            android:paddingTop="100dp">


            <EditText
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_tetx_bg"
                android:ems="10"
                android:hint="密码"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:password="true"
                android:textColor="@color/deep_fontcolor"
                android:textColorHint="@color/fontcolor" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <TextView
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="25dp"
                android:clickable="true"
                android:text="忘记密码？"
                android:textColor="@color/fontcolor" />

            <CheckBox
                android:id="@+id/cb_remember_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="8dp"
                android:paddingRight="20dp"
                android:text="记住密码"
                android:textColor="@color/fontcolor" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:padding="20dp"
            android:paddingTop="100dp">

            <Button
                android:id="@+id/sign"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginRight="60dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_btn1"
                android:elevation="8dp"
                android:text="登录"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />

            <Button
                android:id="@+id/register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@drawable/ripple_btn1"
                android:text="注册"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />
        </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

</LinearLayout>
        <TextView
            android:id="@+id/clause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="90dp"
            android:text="登录使用即表示同意《隐私条款》"
            android:textColor="@color/fontcolor"

            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>