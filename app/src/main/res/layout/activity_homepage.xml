<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage">

    <FrameLayout
        android:id="@+id/fragment_homepage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bar_bottom" />

    <RadioGroup
        android:id="@+id/bar_bottom"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#908982"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/home_table"
            style="@style/BarStyle"
            android:text="主页"
            android:drawableTop="@drawable/table_design_home"/>
        <View style="@style/BarStyle"/>

        <RadioButton
            android:id="@+id/mine_table"
            style="@style/BarStyle"
            android:text="我的"
            android:drawableTop="@drawable/table_design_mine"/>

    </RadioGroup>
<RelativeLayout
    android:id="@+id/tot_add_table"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:background="@android:color/transparent">
    <ImageView
        android:id="@+id/addTo_table"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:src="@mipmap/addto"
        />

    <ImageView
        android:id="@+id/add_table"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:src="@mipmap/add2" />
</RelativeLayout>


</RelativeLayout>