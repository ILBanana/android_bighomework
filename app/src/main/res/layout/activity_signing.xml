<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    tools:context=".signingActivity"
    android:id="@+id/ConstraintLayout">

<LinearLayout
    android:id="@+id/linearLayout_sign"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_marginTop="100dp"
    android:orientation="vertical"
    android:padding="20dp"
    android:paddingTop="100dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    >
<!--    用户名   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:padding="20dp">
        <EditText
            android:id="@+id/username_sign"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_tetx_bg"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:hint="用户名"
            android:textColor="@color/deep_fontcolor"
            android:textColorHint="@color/fontcolor"
            android:ems="10"
            />
    </LinearLayout>
<!--    密码及确定密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:padding="20dp">
        <EditText
            android:id="@+id/password_sign"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_tetx_bg"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:hint="密码"
            android:inputType="textPassword"
            android:textColor="@color/deep_fontcolor"
            android:textColorHint="@color/fontcolor"
            android:ems="10"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:padding="20dp">
        <EditText
            android:id="@+id/password_sign_again"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_tetx_bg"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:textColor="@color/deep_fontcolor"
            android:textColorHint="@color/fontcolor"
            android:ems="10"
            />
    </LinearLayout>
<!--    输入验证码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:padding="20dp">
        <EditText
            android:id="@+id/VerCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/edit_tetx_bg"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:hint="验证码"
            android:textColor="@color/deep_fontcolor"
            android:textColorHint="@color/fontcolor"
            />
        <ImageView
            android:id="@+id/iv_registeractivity_showCode"
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:layout_marginTop="-10dp"
            android:layout_weight="2"
            android:clickable="true"
             />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >
        <Button
            android:id="@+id/sign_true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn2"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="注册"
            android:textSize="30dp"
        />

    </LinearLayout>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>